# Docker Compose Environment Variables
# Copy to .env to customize your development setup

# Database Configuration
# For LOCAL MySQL container (default):
#   - Leave these as defaults and run: docker compose up -d --profile mysql
# For EXTERNAL MySQL (production-like):
#   - Update DB_HOST to your external server IP/hostname
#   - Run: docker compose up -d (without --profile mysql)

DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=icas
DB_USERNAME=root
DB_PASSWORD=root

# Redis Configuration (always in container for dev)
REDIS_HOST=redis
REDIS_PORT=6379

# Application Environment
APP_ENV=local
APP_DEBUG=true
